generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(cuid())
  name     String?
  email    String    @unique
  password String
  role     Role      @default(USER)
  Expensa  Expensa[]
}

model Expensa {
  id      String   @id @default(cuid())
  amount  Float
  paid    Boolean  @default(false)
  dueDate DateTime
  userId  String
  user    User     @relation(fields: [userId], references: [id])
}

enum Role {
  ADMIN
  USER
}
